{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*"],
  "ui": "stream",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".medusa/**"],
      "env": [
        "DATABASE_URL",
        "MEDUSA_BACKEND_URL",
        "NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "clean": {
      "cache": false
    }
  }
}
