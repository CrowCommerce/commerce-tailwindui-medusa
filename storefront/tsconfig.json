{
  "extends": "../tooling/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "references"]
}
